---
// src/components/Footer.astro
const currentYear = new Date().getFullYear()
---

<footer class="bg-gray-50 border-t border-gray-200 mt-16">
  <div class="container-custom py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <h3 class="text-lg font-bold text-gray-900 mb-4">E-Commerce Showcase</h3>
        <p class="text-gray-600">
          Modern e-commerce powered by Cosmic CMS
        </p>
      </div>
      
      <div>
        <h4 class="text-sm font-semibold text-gray-900 mb-4">Quick Links</h4>
        <ul class="space-y-2">
          <li>
            <a href="/" class="text-gray-600 hover:text-primary">Home</a>
          </li>
          <li>
            <a href="/products" class="text-gray-600 hover:text-primary">Products</a>
          </li>
          <li>
            <a href="/collections" class="text-gray-600 hover:text-primary">Collections</a>
          </li>
        </ul>
      </div>
      
      <div>
        <h4 class="text-sm font-semibold text-gray-900 mb-4">Powered By</h4>
        <a 
          href="https://www.cosmicjs.com" 
          target="_blank" 
          rel="noopener noreferrer"
          class="text-gray-600 hover:text-primary"
        >
          Cosmic CMS
        </a>
      </div>
    </div>
    
    <div class="mt-8 pt-8 border-t border-gray-200 text-center text-gray-600">
      <p>&copy; {currentYear} E-Commerce Showcase. All rights reserved.</p>
    </div>
  </div>
</footer>