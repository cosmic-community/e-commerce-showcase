---
// src/pages/collections/[slug].astro
import Layout from '@/layouts/Layout.astro'
import Header from '@/components/Header.astro'
import Footer from '@/components/Footer.astro'
import ProductCard from '@/components/ProductCard.astro'
import { getCollections, getCollectionBySlug, getProductsByCollection } from '@/lib/cosmic'
import type { Collection, Product } from '@/types'

export async function getStaticPaths() {
  const collections = await getCollections() as Collection[]
  
  return collections.map((collection) => ({
    params: { slug: collection.slug },
    props: { collection }
  }))
}

const { slug } = Astro.params
const collection = await getCollectionBySlug(slug) as Collection | null

if (!collection) {
  return Astro.redirect('/collections')
}

const products = await getProductsByCollection(collection.id) as Product[]

const imageUrl = collection.metadata.featured_image?.imgix_url || collection.thumbnail
const headerImageUrl = imageUrl ? `${imageUrl}?w=2400&h=600&fit=crop&auto=format,compress` : ''
---

<Layout 
  title={`${collection.title} - E-Commerce Showcase`}
  description={collection.metadata.description || `Browse our ${collection.title} collection`}
>
  <Header />
  
  <main>
    <!-- Collection Header -->
    <section class="relative bg-gray-900 text-white">
      {headerImageUrl && (
        <div class="absolute inset-0 opacity-40">
          <img
            src={headerImageUrl}
            alt={collection.title}
            class="w-full h-full object-cover"
            width="1200"
            height="300"
          />
        </div>
      )}
      
      <div class="relative container-custom py-16 text-center">
        <h1 class="text-5xl font-bold mb-4">
          {collection.metadata.collection_name}
        </h1>
        {collection.metadata.description && (
          <p class="text-xl text-gray-200 max-w-2xl mx-auto">
            {collection.metadata.description}
          </p>
        )}
      </div>
    </section>
    
    <!-- Products Grid -->
    <section class="py-16">
      <div class="container-custom">
        {products.length > 0 ? (
          <>
            <div class="mb-8">
              <p class="text-gray-600 text-lg">
                Showing {products.length} {products.length === 1 ? 'product' : 'products'}
              </p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
              {products.map((product) => (
                <ProductCard product={product} />
              ))}
            </div>
          </>
        ) : (
          <div class="text-center py-12">
            <p class="text-gray-600 text-lg">
              No products available in this collection yet.
            </p>
          </div>
        )}
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>